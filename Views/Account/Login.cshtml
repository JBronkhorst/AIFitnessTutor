@using AIFitnessTutor.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Home";
}
<section class="space-lg" data-jarallax data-speed="0.2">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-12 col-md-6 col-lg-5 section-intro" style="padding: 20px;background: #007bff;border-radius: 10px;">
                <h1 class="display-4" style="font-weight: bold; color: #fff;">Elevate your fitness journey</h1>
                <span class="lead" style="color: #ddd;">
                    Discover AI-based personalized plans, guidance, and more information you need to transform your health and well-being.
                </span>
            </div>
            <div class="col-md-6">
                <div style="background: #fff; padding: 30px; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
                    <h4 style="margin-bottom: 20px;">Log in to your account</h4>
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <span><b>Sorry!</b> - @TempData["Error"]</span>
                        </div>
                    }
                    <form asp-action="Login" onsubmit="toggleLoadingScreen(true)">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="EmailAddress" class="control-label"></label>
                            <input asp-for="EmailAddress" class="form-control" style="border-radius: 5px;">
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" style="border-radius: 5px;">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-primary" type="submit" value="Log in" style="border-radius: 5px;">
                            <span class="mt-1 float-right">Not an account? <a asp-controller="EmailAndPassword" asp-action="RegisterEmailAndPassword" style="color: #007bff;">Register</a></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
